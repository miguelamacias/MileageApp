<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout2">

    <TextView
            tools:ignore="HardcodedText"
            android:text="debug_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/vehicles_recycler_view"
            tools:listitem="@layout/list_item_vehicle"
            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="@string/my_vehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/vehicles_recycler_view"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/primary_ligth">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">

            <TextView
                    android:text="@string/avg_mileage"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    android:gravity="center_horizontal"
                    app:autoSizeTextType="uniform"
                    android:maxLines="1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:text="@string/stats"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/primary"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="TextContrastCheck"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                    tools:text="7,52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/avg_tv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/textView6" />

            <TextView
                    tools:text="21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/records_tv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="@+id/textView2"
                    android:layout_marginTop="8dp" />

            <TextView
                    android:text="@string/total_records"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center_horizontal"
                    app:autoSizeTextType="uniform"
                    android:maxLines="1"/>

            <TextView
                    android:text="@string/total_kilometres"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:gravity="end" />

            <TextView
                    tools:text="40569"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kilometres_tv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintEnd_toEndOf="@+id/textView12" />

            <TextView
                    tools:text="1540"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/litres_tv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintEnd_toStartOf="@+id/kilometres_tv"
                    android:layout_marginEnd="32dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>